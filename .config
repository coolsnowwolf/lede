#
# Target
#
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_phicomm_k3=y

#
# Image
#
CONFIG_TARGET_ROOTFS_PARTSIZE=640

#
# LuCI
#
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y

#
# Base system
#
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_curl=y

#
# Firewall / Network
#
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_kmod-ipt-nat=y
CONFIG_PACKAGE_kmod-ipt-conntrack=y
CONFIG_PACKAGE_kmod-ipt-masquerade=y
CONFIG_PACKAGE_kmod-nft-tproxy=y
CONFIG_PACKAGE_kmod-tun=y

#
# WiFi (Phicomm K3)
#
CONFIG_PACKAGE_kmod-mt7603=y
CONFIG_PACKAGE_kmod-mt76x2=y
CONFIG_PACKAGE_kmod-mt76x2e=y

#
# K3 Screen
#
CONFIG_PACKAGE_k3screenctrl=y
CONFIG_PACKAGE_luci-app-k3screenctrl=y

#
# DDNS (dynv6)
#
CONFIG_PACKAGE_ddns-scripts=y
CONFIG_PACKAGE_luci-app-ddns=y

#
# Tailscale
#
CONFIG_PACKAGE_tailscale=y
CONFIG_PACKAGE_luci-app-tailscale=y

#
# PassWall
#
CONFIG_PACKAGE_luci-app-passwall=y

#
# Proxy cores
#
# Xray (main)
CONFIG_PACKAGE_xray-core=y

# Sing-box (Trojan backup)
CONFIG_PACKAGE_sing-box=y

#
# Disable heavy / unnecessary packages
#
# CONFIG_PACKAGE_docker is not set
# CONFIG_PACKAGE_aria2 is not set
# CONFIG_PACKAGE_adguardhome is not set
# CONFIG_PACKAGE_v2ray-core is not set
# CONFIG_PACKAGE_hysteria is not set
# CONFIG_PACKAGE_tuic is not set
