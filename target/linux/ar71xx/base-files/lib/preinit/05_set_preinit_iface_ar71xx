set_preinit_iface() {
	. /lib/functions.sh

	case $(board_name) in
	alfa-ap96|\
	alfa-nx|\
	ap135-020|\
	ap136-020|\
	ac9531-010 |\
	ac9531-020 |\
	ap147-010|\
	archer-c5|\
	archer-c7|\
	bhr-4grv2|\
	dir-505-a1|\
	gl-ar750|\
	gl-inet|\
	jwap003|\
	pb42|\
	pb44|\
	rb-433|\
	rb-433u|\
	rb-435g|\
	rb-450|\
	rb-450g|\
	routerstation|\
	routerstation-pro|\
	smart-300|\
	tl-mr3420-v2|\
	tl-wdr4900-v2|\
	tl-wr1043nd-v2|\
	tl-wr710n|\
	tl-wr720n-v3|\
	tl-wr841n-v8|\
	tl-wr842n-v2|\
	tl-wr940n-v4|\
	tl-wr941nd-v6|\
	wnr1000-v2|\
	wnr2000-v3|\
	wnr2200|\
	wnr612-v2|\
	wpe72|\
	wpn824n)
		ifname=eth1
		;;
	*)
		ifname=eth0
		;;
	esac
}

boot_hook_add preinit_main set_preinit_iface
