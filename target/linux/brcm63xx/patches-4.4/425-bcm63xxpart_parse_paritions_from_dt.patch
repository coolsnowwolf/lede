+static int bcm63xx_parse_cfe_partitions_of(struct mtd_info *master,
+					   struct mtd_partition **pparts,
+					   struct mtd_part_parser_data *data)
+{
+	struct device_node *dp, *mtd_node = mtd_get_of_node(master);
+	struct device_node *pp;
+	int i, nr_parts = 0;
+	const char *partname;
+	int len;
+
+	dp = of_get_child_by_name(mtd_node, "partitions");
+	if (!dp)
+		dp = mtd_node;
+
+	for_each_child_of_node(dp, pp) {
+		if (node_has_compatible(pp) && dp == mtd_node)
+			continue;
+
+		if (!of_get_property(pp, "reg", &len))
+			continue;
+
+		partname = of_get_property(pp, "label", &len);
+		if (!partname)
+			partname = of_get_property(pp, "name", &len);
+
+		if (!strcmp(partname, "linux") ||
+		    of_device_is_compatible(pp, "brcm,bcm963xx-imagetag"))
+			nr_parts += 2;
+
+		nr_parts++;
+	}
+
+	*pparts = kzalloc(nr_parts * sizeof(**pparts), GFP_KERNEL);
+	if (!*pparts)
+		return -ENOMEM;
+
+	i = 0;
+	for_each_child_of_node(dp, pp) {
+		const __be32 *reg;
+		int a_cells, s_cells;
+		size_t size, offset;
+
+		if (node_has_compatible(pp) && dp == mtd_node)
+			continue;
+
+		reg = of_get_property(pp, "reg", &len);
+		if (!reg)
+			continue;
+
+		a_cells = of_n_addr_cells(pp);
+		s_cells = of_n_size_cells(pp);
+		offset = of_read_number(reg, a_cells);
+		size = of_read_number(reg + a_cells, s_cells);
+		partname = of_get_property(pp, "label", &len);
+		if (!partname)
+			partname = of_get_property(pp, "name", &len);
+
+		if (!strcmp(partname, "linux") ||
+		    of_device_is_compatible(pp, "brcm,bcm963xx-imagetag"))
+			i += parse_bcmtag(master, *pparts, i, offset, size);
+
+		if (of_get_property(pp, "read-only", &len))
+			(*pparts)[i].mask_flags |= MTD_WRITEABLE;
+
+		if (of_get_property(pp, "lock", &len))
+			(*pparts)[i].mask_flags |= MTD_POWERUP_LOCK;
+
+		(*pparts)[i].offset = offset;
+		(*pparts)[i].size = size;
+		(*pparts)[i].name = partname;
+
+		i++;
+	}
+
+	return i;
+}
