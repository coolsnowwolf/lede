#!/bin/sh

. /lib/functions/leds.sh
. /lib/functions/uci-defaults.sh

board=$(board_name)
boardname="${board##*,}"

board_config_update

case $board in
friendlyarm,nanopi-r2s)
	ucidef_set_led_netdev "wan" "WAN" "$boardname:green:wan" "eth0"
	ucidef_set_led_netdev "lan" "LAN" "$boardname:green:lan" "eth1"
	;;
esac

board_config_flush

exit 0
