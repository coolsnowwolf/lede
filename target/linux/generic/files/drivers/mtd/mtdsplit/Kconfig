config MTD_SPLIT_BRNIMAGE_FW
	bool "brnImage (brnboot image) firmware parser"
	depends on MTD_SPLIT_SUPPORT
	select MTD_SPLIT

config MTD_SPLIT_EVA_FW
	bool "EVA image based firmware partition parser"
	depends on MTD_SPLIT_SUPPORT
