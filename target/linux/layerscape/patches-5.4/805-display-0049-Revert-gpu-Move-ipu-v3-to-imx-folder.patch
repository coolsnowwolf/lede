-		tile_idx = col;
-		in_tile = &ctx->in.tile[tile_idx];
-		out_tile = &ctx->out.tile[ctx->out_tile_map[tile_idx]];
-
-		if (ipu_rot_mode_is_irt(ctx->rot_mode))
-			resized_width = out_tile->height;
-		else
-			resized_width = out_tile->width;
