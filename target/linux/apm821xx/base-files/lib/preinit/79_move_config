BOOTPART=/dev/sda1

move_config() {
	. /lib/functions.sh
	. /lib/upgrade/common.sh

	case "$(board_name)" in
	wd,mybooklive)
		if [ -b $BOOTPART ]; then
			mkdir -p /boot
			mount -t ext4 -o rw,noatime $BOOTPART /boot
			[ -f "/boot/$BACKUP_FILE" ] && mv -f "/boot/$BACKUP_FILE" /
		fi
		;;
	esac
}

boot_hook_add preinit_mount_root move_config
