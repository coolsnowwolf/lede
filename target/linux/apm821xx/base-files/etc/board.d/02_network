#!/bin/sh

. /lib/functions/system.sh
. /lib/functions/uci-defaults.sh

board_config_update

board=$(board_name)

case "$board" in
meraki,mr24|\
wd,mybooklive|\
wd,mybooklive-duo)
	ucidef_set_interface_lan "eth0"
	;;

meraki,mx60|\
netgear,wndr4700)
	ucidef_add_switch "switch0" \
		"0@eth0" "4:lan" "3:lan" "2:lan" "1:lan" "5:wan"
	;;

*)
	ucidef_set_interfaces_lan_wan "eth0" "eth1"
	;;
esac

board_config_flush

exit 0
