#!/bin/sh
#
# Copyright (C) 2014-2015 OpenWrt.org
#

. /lib/functions/uci-defaults.sh

board_config_update

case "$(board_name)" in
itus,shield-router)
	ucidef_set_interfaces_lan_wan "eth1 eth2" "eth0"
	;;
ubnt,edgerouter-4)
	ucidef_set_interfaces_lan_wan "lan1 lan2 lan3" "lan0"
	;;
*)
	ucidef_set_interfaces_lan_wan "eth0" "eth1"
	;;
esac

board_config_flush

exit 0
