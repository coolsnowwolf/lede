 	ret = vc4_hvs_cob_init(hvs);
 	if (ret)
@@ -2303,6 +2311,8 @@ static void vc4_hvs_unbind(struct device
 
 	if (drm_mm_node_allocated(&vc4->hvs->mitchell_netravali_filter))
