+		instructions[5]  = 0x00c7;
+		instructions[6]  = 0x0001;
+		instructions[22] = 0x00d8;
+		instructions[23] = 0x0000;
+	}
+	for (i = 0; i < ARRAY_SIZE(instructions); i++) {
+		if (mode->flags & DRM_MODE_FLAG_NVSYNC)
