+
+    while (offset < len) {
+        chunk_len = min(len - offset, ATR0_TABLE_SIZE);
+        write_memory_chunk(resources, dest + offset, 0, (const u8*)src + offset, chunk_len);
+        offset += chunk_len;
+    }
