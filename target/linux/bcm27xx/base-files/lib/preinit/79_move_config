. /lib/upgrade/common.sh

BOOTPART=/dev/mmcblk0p1

move_config() {
	if [ -b $BOOTPART ]; then
		insmod nls_cp437
		insmod nls_iso8859-1
		insmod fat
		insmod vfat
		mkdir -p /boot
		mount -t vfat -o rw,noatime $BOOTPART /boot
		[ -f /boot/sysupgrade.tgz ] && mv -f /boot/sysupgrade.tgz /
	fi
}

boot_hook_add preinit_mount_root move_config
