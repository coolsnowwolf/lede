+static void 
+pcie_phy_load_war(int pcie_port)
+{
+    int slice;
+
+    for (slice = 1; slice < 4; slice++) {
+        pcie_phy_load_enable(pcie_port, slice);
+        udelay(1);
+        pcie_phy_load_disable(pcie_port, slice);
+    }
+}
