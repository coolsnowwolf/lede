&spi {
	status = "okay";

	eeprom@2 {
		compatible = "atmel,at25", "atmel,at25160n";
		reg = <2>;
		spi-max-frequency = <1000000>;
		spi-cpha;
		spi-cpol;

		pagesize = <32>;
		size = <2048>;
		address-width = <16>;
	};
};

&i2c {
	status = "okay";

	clock-frequency = <100000>;

	/* eeprom-emulation by OMU */
	eeprom@50 {
		compatible = "at,24c02";
		reg = <0x50>;
	};
	eeprom@51 {
		compatible = "at,24c02";
		reg = <0x51>;
	};
};
