preinit_set_mac_address() {
	local mac

	. /lib/functions.sh

	case $(board_name) in
	asus,rt-acrh17)
		CI_UBIPART=UBI_DEV
		mac=$(mtd_get_mac_binary_ubi Factory 4102)
		ifconfig eth0 hw ether $mac 2>/dev/null
		;;
	esac
}

boot_hook_add preinit_main preinit_set_mac_address
