#!/bin/sh
# Copyright (C) 2014-2016 OpenWrt.org
# Copyright (C) 2017 LEDE project

. /lib/functions/uci-defaults.sh
. /lib/functions.sh
. /lib/functions/system.sh

board_config_update

board=$(board_name)

case "$board" in
rpi-2-b |\
rpi-3-b |\
rpi-b |\
rpi-b-plus)
	ucidef_set_interface_lan "eth0"
	;;
rpi-zero-w)
	ucidef_set_interface_lan "wlan0"
	;;
esac

board_config_flush

exit 0
