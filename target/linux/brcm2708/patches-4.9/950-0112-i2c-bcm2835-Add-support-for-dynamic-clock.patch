 		if (msgs[i].flags & I2C_M_RD) {
@@ -235,6 +260,10 @@ static int bcm2835_i2c_xfer(struct i2c_a
 			return -EOPNOTSUPP;
 		}
 
+	ret = bcm2835_i2c_set_divider(i2c_dev);
+	if (ret)
