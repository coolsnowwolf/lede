# 基础配置：K2P A1目标机型
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_phicomm_k2p=y

# 双频WiFi核心驱动（必开）
CONFIG_PACKAGE_kmod-mt7603e=y        # 2.4G WiFi驱动
CONFIG_PACKAGE_kmod-mt7615e=y        # 5G WiFi驱动
CONFIG_PACKAGE_kmod-mt7615d-firmware=y # 5G WiFi固件
CONFIG_PACKAGE_wireless-tools=y      # WiFi工具
CONFIG_PACKAGE_wpa_supplicant=y      # WiFi认证

# KVR漫游协议（必开）
CONFIG_PACKAGE_hostapd=y
CONFIG_PACKAGE_hostapd-utils=y
CONFIG_PACKAGE_hostapd_KVR=y         # 开启KVR漫游
CONFIG_PACKAGE_hostapd-utils_KVR=y

# easymesh插件（必开）
CONFIG_PACKAGE_luci-app-easymesh=y   # easymesh主插件
CONFIG_PACKAGE_luci-i18n-easymesh-zh-cn=y # 中文语言包

# 基础系统工具（可选，建议保留）
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_sshfs=y
CONFIG_PACKAGE_opkg=y

# 固件大小限制（K2P A1最大支持128M rootfs）
CONFIG_TARGET_ROOTFS_PARTSIZE=128
CONFIG_TARGET_ROOTFS_SQUASHFS=y      # 压缩格式，节省空间
