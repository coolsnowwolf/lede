menu "OSCam build options"
	depends on PACKAGE_oscam

config OSCAM_USE_LIBCRYPTO
	bool "Build with OpenSSL libcrypto"
	help
		"Use OpenSSL libcrypto instead of OSCam internal crypto functions"
	default y

config OSCAM_USE_LIBUSB
	bool
	default y

