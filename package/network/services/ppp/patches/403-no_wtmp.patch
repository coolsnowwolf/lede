     struct utmp ut, *utp;
     pid_t  mypid = getpid();
 #if __GLIBC__ < 2
@@ -2535,6 +2536,7 @@ void logwtmp (const char *line, const ch
 	close (wtmp);
     }
 #endif
+#endif
 }
