	bool "Enable multi-homed UDP server support (--multihome)"
	default y

config OPENVPN_openssl_ENABLE_PORT_SHARE
	bool "Enable TCP server port-share support (--port-share)"
	default y

config OPENVPN_openssl_ENABLE_DEF_AUTH
