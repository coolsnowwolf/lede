+	struct ath_softc *sc;
+	char label[32];
+	struct gpio_chip gchip;
+};
+#endif
+
 struct ath_softc {
 	struct ieee80211_hw *hw;
 	struct device *dev;
@@ -1045,6 +1054,9 @@ struct ath_softc {
 #ifdef CPTCFG_MAC80211_LEDS
