preprocess = {
	RRATimespans = function(val)
		local rv = { }
		for time in val:gmatch("[^%s]+") do
			table.insert( rv, luci.util.parse_units(time) )
		end
		return table.concat(rv, " ")
	end
}


section("collectd")

section("logfile")

for plugin in pairs(plugins) do
	if (plugin ~= "collectd") and (plugin ~= "logfile") then
		section( plugin )
	end
end
